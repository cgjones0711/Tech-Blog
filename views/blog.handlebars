<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <p>
    <button class="btn btn-primary">Comment!</button>
  </p>
</div>

<div class="row">
  <div class="col-auto">

  </div>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a Comment:</h3>
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-name">Name:</label>
        <input class="form-input" type="text" id="comment-name" name="comment-name" />
      </div>
      <div class="form-group">
        <label for="comment-desc">Comment:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{#if comments.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Comments:</h3>
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{comment.id}}">{{comment.comment}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="/js/comment.js"></script>